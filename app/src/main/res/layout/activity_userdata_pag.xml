<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/ubicacionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación Actual"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infoLinearLayout" />

    <!-- LinearLayout para latitud, longitud, precisión y altitud -->
    <LinearLayout
        android:id="@+id/infoLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ubicacionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mostrar la Latitud -->
        <TextView
            android:id="@+id/latitudText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud: Esperando..."
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <!-- Mostrar la Longitud -->
        <TextView
            android:id="@+id/longitudText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud: Esperando..."
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <!-- Mostrar la Precisión -->
        <TextView
            android:id="@+id/precisionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precisión: Esperando..."
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <!-- Mostrar la Altitud -->
        <TextView
            android:id="@+id/altitudText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altitud: Esperando..."
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <!-- Botón para obtener la ubicación -->
    <Button
        android:id="@+id/btnObtenerUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obtener Ubicación"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/infoLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para volver a ThirdPag -->
    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:text="@string/btn_regresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnObtenerUbicacion" />

</androidx.constraintlayout.widget.ConstraintLayout>
